{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "include",
          "extend",
          "mixin",
          "function",
          "return",
          "for",
          "if",
          "else",
          "warn",
          "screen"
        ]
      }
    ],
    "no-descending-specificity": null
  }
}
